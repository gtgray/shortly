<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/dark_violet</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="App.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:fontFamily">@font/poppins_bold_700</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
